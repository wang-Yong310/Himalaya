<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_play_list_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/cl_play_list"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/play_list_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_play_mode_switch"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/selector_play_mode_list_order" />

            <TextView
                android:id="@+id/tv_play_list_mode"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="6dp"
                android:gravity="center"
                android:text="顺序播放"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/play_list_order_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_play_list_order"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/selector_play_mode_list_order" />

            <TextView
                android:id="@+id/tv_play_list_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="顺序"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_play_list"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@id/cl_play_list"/>

    <TextView
        android:id="@+id/tv_play_list_bottom_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_play_list"
        android:background="#f3f4"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="关闭"
        android:textColor="@color/black"
        android:textSize="18sp" />
</RelativeLayout>